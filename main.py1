def sum(a, b):
    return (a + b)

a = int(input('Enter 1st number: '))
b = int(input('Enter 2nd number: '))

print(f'Sum of {a} and {b} is {sum(a, b)}')
def uqsa_tapu(maqsat, uzau):
    әдісті = maqsat.split()
    natizha = [soz for soz in әдісті if len(soz) < uzau]
    return ' '.join(natizha)

maqsat = "Метрикалық әдістерді пайтон арқылы жасау"
uzau = 7

natizha = uqsa_tapu(maqsat, uzau)
print(natizha)